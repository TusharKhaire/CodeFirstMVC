@model TestDemoCodeDAL.DAL.Entity.Masters.ItemType

<h2>Edit</h2>
@{ 
    if (ViewBag.Message!=null)
    {
        <script type="text/javascript">
           alert(@Html.Raw(Json.Encode(ViewBag.Message)));
        </script>
    }
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal container col-md-12">
        @Html.ValidationSummary(true, "", new { @class="text-danger"})
        @Html.HiddenFor(x=>x.TypeId)
        <div class="form-group col-md-6">
            @Html.LabelFor(x => x.TypeName, "Type Name", htmlAttributes: new { @class="control-label col-md-3"})
            <div class="col-md-9">
                @Html.EditorFor(x => x.TypeName, new { htmlAttributes = new { @class="form-control"} })
                @Html.ValidationMessageFor(x=>x.TypeName,"",new { @class="text-danger"})
            </div>
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(x=>x.Details,"Details",htmlAttributes:new { @class="control-label col-md-3"})
            <div class="col-md-9">
                @Html.EditorFor(x => x.Details, new { htmlAttributes=new { @class="form-control"} })
                @Html.ValidationMessageFor(x => x.Details, "", new { @class="text-danger"})
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Modify" id="btn_modify" class="btn btn-default">
            </div>
        </div>
    </div>
}
